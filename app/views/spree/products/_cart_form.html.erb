
<%= form_for :order, html: {
  id: 'add-to-cart-form',
  class: 'add-to-cart-form',
  'data-product-summary': @product_summary.to_json,
  'data-variants': product_variants_matrix(product_available_in_currency?),
  'data-variant-change-trigger-identifier': variant_change_identifier
} do |f| %>

<% if @product.can_supply? %>
  <%= hidden_field_tag "variant_id", variant.id %>
  <%= hidden_field_tag "quantity", 1 %>


  <%= button_tag Spree.t(:add_to_cart), 
    class: 'btn btn-outline-primary btn-block add-to-cart-button', 
    id: 'add-to-cart-button', 
    type: :submit, 
    disabled: true %>
<% end %>

<% end %>
