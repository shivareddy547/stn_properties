<script>
    $(document).ready(function() {
        // Show popular destinations when the search box is clicked
        $('#search-box').focus(function() {
            $('#popular-destinations').slideDown();
        });

        // Hide popular destinations when clicked outside
        $(document).click(function(e) {
            if (!$(e.target).closest('#search-box, #popular-destinations').length) {
                $('#popular-destinations').slideUp();
            }
        });

        // Hide popular destinations when a destination is clicked
        $('.destination').click(function() {
            const destinationName = $(this).find('strong').text();
            $('#search-box').val(destinationName);
            $('#popular-destinations').slideUp();
        });
    });
