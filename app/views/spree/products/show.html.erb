document.addEventListener('DOMContentLoaded', function () {
    const dropdownButton = document.getElementById('dropdownMenuButton');
    const dropdownMenu = document.querySelector('.dropdown-menu');

    // Adjust dropdown position based on available space
    dropdownButton.addEventListener('click', function () {
        const dropdownRect = dropdownButton.getBoundingClientRect();
        const spaceBelow = window.innerHeight - dropdownRect.bottom;
        const dropdownHeight = dropdownMenu.offsetHeight;

        if (spaceBelow < dropdownHeight) {
            // Not enough space below, open upwards
            dropdownMenu.style.top = 'auto';
            dropdownMenu.style.bottom = '100%';
            dropdownMenu.style.marginTop = '0';
            dropdownMenu.style.marginBottom = '5px';  // Add spacing
        } else {
            // Enough space below, open downwards
            dropdownMenu.style.top = '100%';
            dropdownMenu.style.bottom = 'auto';
            dropdownMenu.style.marginTop = '5px';
            dropdownMenu.style.marginBottom = '0';
        }
    });
});



    document.addEventListener('DOMContentLoaded', function () {
        let adultCount = 2; // initial adult count
        let childCount = 2; // initial child count
        let roomCount = 1; // initial room count
        let maxAdults = 10;
        let maxChildren = 6;

        // Room Increment/Decrement Logic
        document.getElementById('room-plus').addEventListener('click', function(e) {
            e.stopPropagation(); // Prevent closing dropdown
            roomCount++;
            document.getElementById('room-count').value = roomCount;
        });

        document.getElementById('room-minus').addEventListener('click', function(e) {
            e.stopPropagation(); // Prevent closing dropdown
            if (roomCount > 1) {
                roomCount--;
                document.getElementById('room-count').value = roomCount;
            }
        });

        // Adult Increment/Decrement Logic
        document.getElementById('adult-plus').addEventListener('click', function(e) {
            e.stopPropagation(); // Prevent closing dropdown
            if (adultCount < maxAdults) {
                adultCount++;
                document.getElementById('adult-count').value = adultCount;
            }
        });

        document.getElementById('adult-minus').addEventListener('click', function(e) {
            e.stopPropagation(); // Prevent closing dropdown
            if (adultCount > 1) {
                adultCount--;
                document.getElementById('adult-count').value = adultCount;
            }
        });

        // Children Increment/Decrement Logic
        document.getElementById('child-plus').addEventListener('click', function(e) {
            e.stopPropagation(); // Prevent closing dropdown
            if (childCount < maxChildren) {
                childCount++;
                document.getElementById('child-count').value = childCount;
                addChildAgeField(childCount);
            }
        });

        document.getElementById('child-minus').addEventListener('click', function(e) {
            e.stopPropagation(); // Prevent closing dropdown
            if (childCount > 0) {
                removeChildAgeField(childCount);
                childCount--;
                document.getElementById('child-count').value = childCount;
            }
        });

        // Function to add a child age dropdown when children count is increased
        function addChildAgeField(count) {
            const childrenAgesDiv = document.getElementById('children-ages');
            const formGroup = document.createElement('div');
            formGroup.classList.add('form-group');

            const label = document.createElement('label');
            label.textContent = `Age of Child ${count}`;
            label.setAttribute('for', `child-age-${count}`);
            
            const select = document.createElement('select');
            select.classList.add('form-control');
            select.id = `child-age-${count}`;
            
            // Add age options
            for (let i = 0; i <= 17; i++) {
                const option = document.createElement('option');
                option.value = i;
                option.textContent = `${i} years old`;
                select.appendChild(option);
            }

            formGroup.appendChild(label);
            formGroup.appendChild(select);
            childrenAgesDiv.appendChild(formGroup);

            // Stop event propagation for child age dropdown
            select.addEventListener('click', function (e) {
                e.stopPropagation();
            });
        }

        // Function to remove a child age dropdown when children count is decreased
        function removeChildAgeField(count) {
            const childAgeSelect = document.getElementById(`child-age-${count}`);
            if (childAgeSelect) {
                childAgeSelect.parentElement.remove();
            }
        }

    });
</script>
